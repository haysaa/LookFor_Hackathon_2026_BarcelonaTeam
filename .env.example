# ===================================
# Lookfor Hackathon 2026 - Configuration
# ===================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Hackathon Tool API (provided on-site)
API_URL=https://hackathon-api.lookfor.com

# Language & Tone Configuration
# Options: "tr" (Türkçe) or "en" (English)
RESPONSE_LANGUAGE=tr
BRAND_TONE=empathetic_professional

# Triage Agent Risk Mitigation
# Confidence threshold: 0.0 to 1.0 (default: 0.6)
TRIAGE_CONFIDENCE_THRESHOLD=0.6
# Action on low confidence: "ask_clarifying" or "escalate"
TRIAGE_LOW_CONFIDENCE_ACTION=ask_clarifying

# Tool Execution Configuration
# Maximum retries per tool call (default: 1)
TOOL_MAX_RETRIES=1
# Number of failures before auto-escalation (default: 2)
TOOL_FAILURE_THRESHOLD=2

# Escalation Configuration
# Auto-escalate on tool failure after retries (default: true)
AUTO_ESCALATE_ON_TOOL_FAILURE=true
# Auto-escalate on low confidence triage (default: false)
AUTO_ESCALATE_ON_LOW_CONFIDENCE=false

# Tool API Configuration
TOOLS_API_URL=http://localhost:8001
