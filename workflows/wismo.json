{
    "workflow_name": "WISMO",
    "version": "2.0",
    "description": "Where Is My Order workflow - handles shipping delay inquiries",
    "rules": [
        {
            "id": "missing_order_id",
            "condition": "not order_id",
            "action": "ask_clarifying",
            "required_fields_missing": [
                "order_id"
            ],
            "policy_applied": "order_id_required"
        },
        {
            "id": "friday_promise",
            "condition": "contact_day in ['Mon', 'Tue', 'Wed']",
            "action": "respond",
            "policy_applied": "friday_promise",
            "response_template": "Sayın {first_name},\n\nSiparişiniz Cuma gününe kadar size ulaşacaktır. Anlayışınız için teşekkür ederiz.\n\nSaygılarımızla,\nMüşteri Hizmetleri"
        },
        {
            "id": "next_week_promise",
            "condition": "contact_day in ['Thu', 'Fri', 'Sat', 'Sun']",
            "action": "respond",
            "policy_applied": "next_week_promise",
            "response_template": "Sayın {first_name},\n\nSiparişiniz önümüzdeki hafta başında size ulaşacaktır. Anlayışınız için teşekkür ederiz.\n\nSaygılarımızla,\nMüşteri Hizmetleri"
        },
        {
            "id": "post_promise_escalation",
            "condition": "promise_given and still_not_delivered",
            "action": "escalate",
            "policy_applied": "post_promise_escalation",
            "escalation_reason": "Delivery promise exceeded - customer waited beyond promised date"
        }
    ],
    "required_fields": [
        "order_id"
    ],
    "tools_to_call": [
        "shopify_get_order_details"
    ],
    "priority": 1
}