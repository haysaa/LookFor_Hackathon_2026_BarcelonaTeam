    "skio_pause_subscription": {
        "handle": "skio_pause_subscription",
        "endpoint": null,
        "description": "Pause a subscription",
        "paramsJsonSchema": {
            "type": "object",
            "properties": {
                "subscription_id": {
                    "type": "string"
                },
                "pause_until": {
                    "type": "string",
                    "format": "date"
                }
            },
            "required": [
                "subscription_id"
            ]
        },
        "mock_response": {
            "success": true,
